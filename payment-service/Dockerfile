FROM python:3.11-slim

WORKDIR /app

# Gereken Python ba覺ml覺l覺klar覺n覺 y羹kle
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

#  Sistem ara癟lar覺n覺 ekle (ps, netstat, curl)
RUN apt-get update && apt-get install -y procps curl net-tools && rm -rf /var/lib/apt/lists/*

# Uygulama dosyalar覺n覺 kopyala
COPY . .

# gRPC portu
EXPOSE 50051

# Servisi balat
CMD ["python", "payment_service.py"]
